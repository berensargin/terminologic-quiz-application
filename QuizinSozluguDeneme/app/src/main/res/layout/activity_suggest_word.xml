<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWordActivity"
    android:background="#ff9500">

    <EditText
        android:id="@+id/oneriIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Kelimenin İngilizcesi:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/oneriIsim"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/oneriTr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Kelimenin Türkçesi:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/oneriIng"
        app:layout_constraintStart_toStartOf="@+id/oneriIng"
        app:layout_constraintTop_toBottomOf="@+id/oneriIng" />

    <EditText
        android:id="@+id/oneriCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Kelime kategorisi:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/oneriTr"
        app:layout_constraintStart_toStartOf="@+id/oneriIng"
        app:layout_constraintTop_toBottomOf="@+id/oneriTr" />

    <EditText
        android:id="@+id/oneriIsim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="İsminiz:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/oneriEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="E-posta adresiniz:"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/oneriIsim"
        app:layout_constraintTop_toBottomOf="@+id/oneriIsim" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="163dp"
        android:gravity="center_vertical"
        android:text="Kişisel Bilgiler"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/oneriIsim"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:text="Kelime Öneri Bölümü"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/oneriEmail" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="297dp"
        android:layout_height="33dp"
        android:text="Size geri bildirimde bulunabilmemiz için alttaki kutucukları doldurmanız gerekmektedir."
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:text="Geçerli kategoriler: Elektrik, İnşaat, Matematik, Bilişim, Mekanik, Makine, İstatistik"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/oneriCat"
        app:layout_constraintTop_toBottomOf="@+id/oneriCat" />

    <Button
        android:id="@+id/buttonOneriGonder"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="46dp"
        android:text="Önerimi Gönder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>